---
layout: default
---

<div class="doc">
    <input id="menu-responsive" type="checkbox">
    <label for="menu-responsive">
        <div class="doc__menu-button button-special-color">
            <a><span class="doc__menu-icon icon-special-color"></span></a>
        </div>
    </label>

    <div id="doc-menu" class="doc__menu">
        <div class="doc__info">
            {% if theme.img %}
                <a href="{{ config.root }}"><img class="doc__info-img" src="{{ theme.img}}" alt="logo simplify"></a>
            {% endif %}
            {% if theme.description %}
                <p class="doc__info-text">{{ theme.description }}</p>
            {% endif %}
        </div>
        {% for post in site.posts.sort('order', 1).toArray() %}
                <a href="{{ url_for(post.path) }}"><div class="doc__menu-topic topic-special-color">{{ post.title }}</div></a>
        {% endfor %}
    </div>

    <div class="doc__content">
        <div class="doc__text">
            <article class="styling-content">
                <h1>{{ page.title }}</h1>
                {{ page.content }}
            </article>
        </div>
    </div>
</div>